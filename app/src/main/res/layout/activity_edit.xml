<ScrollView



    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_purple"
    tools:context="com.wordpress.ishansaysjava.bangladeshiuniversityinfo.edit">




    <GridLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:columnCount="2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginBottom="10dp"
            android:text="SSC GPA:"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:layout_column="1"

            android:layout_marginBottom="10dp"
            android:id="@+id/res_ssc"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginBottom="10dp"
            android:text="HSC GPA:"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:layout_column="1"

            android:layout_marginBottom="10dp"
            android:id="@+id/res_hsc"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_marginBottom="10dp"
            android:text="Student type:"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_marginBottom="10dp"
            android:id="@+id/type"
            android:entries="@array/type"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_marginBottom="10dp"
            android:text="Group:"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="6"
            android:layout_marginBottom="10dp"
            android:id="@+id/group"
            android:entries="@array/group"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="7"
            android:layout_marginBottom="10dp"
            android:text="HSC YEAR:"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_row="7"
            android:layout_column="1"

            android:layout_marginBottom="10dp"
            android:id="@+id/hsc_yr"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="8"
            android:layout_marginBottom="10dp"
            android:text="BLOOD GROUP:"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="fill_horizontal"
            android:layout_row="8"
            android:layout_column="1"

            android:layout_marginBottom="10dp"
            android:id="@+id/blood_grp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_columnSpan="2"
            android:layout_row="9"
            android:layout_column="0"
            android:text="update"
            android:onClick="update"
            android:background="@android:color/holo_blue_light"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_columnSpan="2"
            android:layout_row="10"
            android:layout_column="0"
            android:text="register"
            android:onClick="register"
            android:background="@android:color/holo_blue_light"
            />

    </GridLayout>
</ScrollView>

