<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.wordpress.ishansaysjava.bangladeshiuniversityinfo.User_Info">
    <GridLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:columnCount="3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:text="Username:"
            android:layout_row="0"
            android:layout_column="0"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Medium"
        android:id="@+id/username_"
        android:layout_row="0"
        android:layout_column="1"
         />
        <Space
            android:layout_width="2dp"
            android:layout_height="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:text="password:"
            android:layout_row="1"
            android:layout_column="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/pass"
            android:layout_row="1"
            android:layout_column="1"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:text="SSC:"
            android:layout_row="2"
            android:layout_column="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/res_s"
            android:layout_row="2"
            android:layout_column="1"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:text="HSC:"
            android:layout_row="3"
            android:layout_column="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/res_h"
            android:layout_row="3"
            android:layout_column="1"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:text="group:"
            android:layout_row="4"
            android:layout_column="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/groupname"
            android:layout_row="4"
            android:layout_column="1"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="18dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:text="type:"
            android:layout_row="5"
            android:layout_column="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/type_"
            android:layout_row="5"
            android:layout_column="1"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:text="HSC Year:"
            android:layout_row="6"
            android:layout_column="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/hsc_yr_"
            android:layout_row="6"
            android:layout_column="1"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:text="Blood Group:"
            android:layout_row="7"
            android:layout_column="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/blood_"
            android:layout_row="7"
            android:layout_column="1"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="100dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_columnSpan="2"
            android:layout_row="8"
            android:layout_column="0"
            android:text="Edit"
            android:onClick="edit_"
            android:background="@android:color/holo_blue_light"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_columnSpan="2"
            android:layout_row="8"
            android:layout_column="1"
            android:text="Delete"
            android:onClick="delete_"
            android:background="@android:color/holo_blue_light"
            />
    </GridLayout>
</ScrollView>



