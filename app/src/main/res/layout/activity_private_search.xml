<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_orange_light"
    tools:context="com.wordpress.ishansaysjava.bangladeshiuniversityinfo.RegisterActivity">

    <GridLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:columnCount="2"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginBottom="10dp"
            android:text="Department"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginBottom="10dp"
            android:id="@+id/dept"
            android:entries="@array/dept"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginBottom="10dp"
            android:text="Cost per credit"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginBottom="10dp"
            android:id="@+id/cost"
            android:entries="@array/cost"
            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_marginBottom="10dp"
        android:text="Campus"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginBottom="10dp"
            android:id="@+id/campus"
            android:entries="@array/campus"
            />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_marginBottom="10dp"
        android:text="IEB Accreditation"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_marginBottom="10dp"
            android:id="@+id/ieb"
            android:entries="@array/ieb"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_marginBottom="10dp"
            android:text="Minimum Req GPA"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_marginBottom="10dp"
            android:id="@+id/minGPA"
            android:entries="@array/minGPA"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_columnSpan="2"
            android:layout_row="6"
            android:layout_column="0"
            android:text="Search"
            android:onClick="search"
            android:background="@android:color/holo_blue_light"
            />

    </GridLayout>
</ScrollView>


